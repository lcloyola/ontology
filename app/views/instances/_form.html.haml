= form_for @instance do |f|
  -if @instance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@instance.errors.count, "error")} prohibited this instance from being saved:"
      %ul
        - @instance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :object_id
    = f.number_field :object_id
  .actions
    = f.submit 'Save'
