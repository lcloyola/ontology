= form_for @subitem do |f|
  -if @subitem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subitem.errors.count, "error")} prohibited this subitem from being saved:"
      %ul
        - @subitem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :relationship_id
    = f.number_field :relationship_id
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :child_id
    = f.number_field :child_id
  .actions
    = f.submit 'Save'
