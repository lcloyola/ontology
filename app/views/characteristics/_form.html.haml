= form_for @characteristic do |f|
  -if @characteristic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@characteristic.errors.count, "error")} prohibited this characteristic from being saved:"
      %ul
        - @characteristic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :descriptor_id
    = collection_select :chracteristic, :descriptor_id, Descriptor.all, :id, :name
  .field
    = f.label :instance_id
    = collection_select :chracteristic, :instance_id, Instance.all, :id, :name
  .field
    = f.label :value
    .value-list= render "descriptors/value-list"
  .actions
    = f.submit 'Save'

